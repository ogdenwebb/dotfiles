# vim: syntax=config
# heartbeat-cmd="xscreensaver-command -deactivate >&- 2>&- &"
save-position-on-quit=yes
volume=100

# Increase volume maximum
volume-max=200

audio-file-paths=**
audio-file-auto=fuzzy

alang=jpn,eng,rus
slang=rus,eng

# default value of 320kB is quite low, especially on slow media
# TODO:
#cache-default=4000
#cache=4000

## Audio output
ao=pipewire

## Video output
# Should be faster than vo=gpu
vo=gpu-next

# Autodetect decoder
# hwdec=auto

hwdec=nvdec
hwdec=auto-copy
gpu-api=vulkan


## Disabled built-in sub styles
no-sub-ass

## Interface font
osd-font="Play"
osd-font-size=28

## Subs font
sub-font="Roboto"
sub-font-size=48

## Repeat
loop-playlist=inf

# use youtube-dl the best quality with up to 1080p resolution
# you can add vp9 if your GPU doesn't have vp9 support [vcodec!=?vp9]
ytdl-format=bestvideo[height<=?1080]+bestaudio/best

# Resize window at startup
#autofit-larger=40%x40%
#
# Fix KWIN crash
x11-bypass-compositor=no
